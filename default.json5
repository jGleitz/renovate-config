{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["config:best-practices"],
  rebaseWhen: "behind-base-branch",
  rangeStrategy: "pin",
  lockFileMaintenance: {
    enabled: true,
  },
  packageRules: [
    {
      // the engine requirement should match what is tested in CI. It shouldnâ€™t be updated automatically.
      matchDepTypes: ["engines"],
      enabled: false,
    },
    {
      matchUpdateTypes: [
        "minor",
        "patch",
        "pin",
        "digest",
        "lockFileMaintenance",
      ],
      automerge: true,
    },
    {
      matchPackageNames: ["renovatebot/renovate"],
      matchUpdateTypes: ["minor", "patch"],
      schedule: ["* 4-10 * * 5"],
    },
  ],
}
